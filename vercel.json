{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build",
        "outputDirectory": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://api.yourapp.com/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "github": {
    "enabled": true,
    "silent": true,
    "autoAlias": true,
    "branches": [
      "main",
      "develop",
      "feature/**",
      "release/**"
    ]
  },
  "git": {
    "deploymentEnabled": {
      "main": true,
      "develop": true,
      "feature/**": true,
      "release/**": true
    }
  }
}
